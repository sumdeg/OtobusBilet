@model BiletSefer

    <body style="background-color:#e9e3e3">
    </body>
<div class="container shadow" style="text-align:center; background-color:white;">
    <br />
    <i class="fas fa-check-circle" style="font-size:36px; color:green;"></i><br />
    <br /><p> Sayın @Model.bilet.Ad @Model.bilet.Soyad, @Model.bilet.Nereden -> @Model.bilet.Nereye için bilet alma işleminiz başarılı.</p> <br />
    <a asp-controller="home" asp-action="iletisim">İletişim</a>
    <br /><hr /><br />
    <h3>Bilet Bilgileriniz</h3><br />

    <table class="table table table-bordered shadow-sm bg-white">
        <thead>
            <tr>
                <th style="width:40px;">Bilet No</th>
                <th style="width:200px;">Ad - Soyad</th>
                <th style="width:200px;">Kimlik No</th>
                <th style="width:200px;">Cinsiyet</th>
                <th style="width:200px;">Telefon No</th>
                <th style="width:200px;">Mail</th>
                <th style="width:100px;">Nereden</th>
                <th style="width:100px;">Nereye</th>
                <th style="width:50px;">KoltukNo</th>
                <th style="width:80px;">Fiyat</th>
                <th style="width:200px;">Tarih - Saat</th>



            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.bilet.BiletId</td>
                <td>@Model.bilet.Ad @Model.bilet.Soyad</td>
                <td>@Model.bilet.KimlikNo</td>
                <td>@Model.bilet.Cinsiyet</td>
                <td>@Model.bilet.TelNo</td>
                <td>@Model.bilet.Mail</td>
                <td>@Model.bilet.Nereden</td>
                <td>@Model.bilet.Nereye</td>
                <td>@Model.bilet.KoltukNo</td>
                <td>@Model.fiyat ₺</td>
                <td>@Model.tarih - @Model.saat</td>


            </tr>
        </tbody>
    </table>
    <br />
</div>
